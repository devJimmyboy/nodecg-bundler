{
  "name": "nodecg-bundler",
  "version": "1.0.3",
  "description": "A Wrapper around Vite designed specifically for NodeCG Bundles.",
  "license": "MIT",
  "bin": {
    "nodecg-bundler": "dist/bin/nodecg-bundler.js",
    "ncgb": "dist/bin/nodecg-bundler.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devJimmyboy/nodecg-bundler.git"
  },
  "bugs": {
    "email": "jimmy@jimmyboy.dev",
    "url": "https://github.com/devJimmyboy/nodecg-bundler/issues"
  },
  "readme": "https://github.com/devJimmyboy/nodecg-bundler#readme",
  "homepage": "https://github.com/devJimmyboy/nodecg-bundler",
  "author": {
    "email": "jimmy@jimmyboy.dev",
    "name": "Jimmyboy",
    "url": "https://github.com/devJimmyboy"
  },
  "keywords": [
    "nodecg",
    "nodecg-bundle",
    "vite",
    "bundler",
    "cli",
    "wrapper"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc -p tsconfig.json",
    "test": "ava"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/node": "^17.0.23",
    "@types/node-fetch": "2",
    "@types/request": "^2.48.8",
    "@types/semver": "^7.3.9",
    "ava": "^4.2.0",
    "execa": "^6.1.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "chalk": "4",
    "commander": "^9.1.0",
    "node-fetch": "2",
    "prompts": "^2.4.2",
    "semver": "^7.3.7",
    "vite": "^2.9.4"
  },
  "peerDependencies": {
    "typescript": "^3.2.1 || ^4"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@vitejs/plugin-react": "^1.3.1",
    "@vitejs/plugin-vue": "^2.3.1"
  },
  "ava": {
    "extensions": {
      "ts": "commonjs"
    },
    "nodeArguments": [
      "--loader=ts-node/register"
    ],
    "files": [
      "test/**"
    ],
    "exclude": [
      "test/mock/**/*"
    ],
    "concurrency": 1,
    "timeout": "2m",
    "verbose": true
  }
}
