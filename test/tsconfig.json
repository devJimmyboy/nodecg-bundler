{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ESNext"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "ava"
    ],
    "incremental": true,
    "pretty": true
  },
  "include": [
    "**/*.spec.ts",
    "types"
  ]
}
